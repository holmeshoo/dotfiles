# Shell Functions

# Translation (requires translate-shell)
# Usage: transen "Hello"
transen () {
    trans en:ja "$1"
}

# Usage: transja "こんにちは"
transja () {
    trans ja:en "$1"
}

# Usage: stransen "Hello" (Brief mode)
stransen () {
    trans -b en:ja "$1"
}

# Usage: stransja "こんにちは" (Brief mode)
stransja () {
    trans -b ja:en "$1"
}

# Make a directory and enter it
# Usage: mkd my_folder
mkd() {
    mkdir -p "$@" && cd "$@"
}

# Display PATH in a readable list
path() {
    echo $PATH | tr ":" "\n"
}

# Extract any archive
# Usage: extract filename
extract() {
    if [ -f "$1" ] ; then
        case "$1" in
            *.tar.bz2)   tar xjf "$1"     ;;
            *.tar.gz)    tar xzf "$1"     ;;
            *.bz2)       bunzip2 "$1"     ;;
            *.rar)       unrar e "$1"     ;;
            *.gz)        gunzip "$1"      ;;
            *.tar)       tar xf "$1"      ;;
            *.tbz2)      tar xjf "$1"     ;;
            *.tgz)       tar xzf "$1"     ;;
            *.zip)       unzip "$1"       ;;
            *.Z)         uncompress "$1"  ;;
            *.7z)        7z x "$1"        ;;
            *)     echo "'$1' cannot be extracted via extract()" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}
